{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "jsRules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rules": {
        "jsx-alignment": true,
        "jsx-curly-spacing": [
            true,
            "never"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "no-unused-new": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-invalid-this": true,
        "member-ordering": [
            false
        ],
        "only-arrow-functions": [
            false
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "eofline": true,
        "switch-default": true,
        "no-console": [
            false
        ],
        "no-empty-interface": false,
        "max-line-length": [
            false
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": [
            true
        ],
        "prefer-for-of": false,
        "no-var-requires": true,
        "typedef": [
            true
        ],
        "max-file-line-count": [
            true,
            500
        ],
        "align": [
            true
        ],
        "arrow-return-shorthand": true,
        "newline-before-return": true,
        "object-literal-shorthand": true,
        "prefer-method-signature": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "no-shadowed-variable": false
    }
}
