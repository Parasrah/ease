{
  "name": "ease",
  "version": "0.1.0",
  "description": "Sync local video between yourself and your loved ones for a more intimate experience",
  "main": "dist/src/main/App.js",
  "scripts": {
    "setup": "npm install && npm prune && typings install && npm run rebuild",
    "start": "electron .",
    "clean": "rimraf dist/*",
    "rebuild": "npm run clean && npm run build",
    "build": "npm run build:ts && npm run build:wp",
    "build:ts": "tsc --diagnostics --project .",
    "build:wp": "webpack",
    "watch": "concurrently --kill-others \"npm run watch:wp\" \"npm run watch:ts\"",
    "watch:wp": "webpack -w",
    "watch:ts": "tsc -w",
    "test": "npm run test:main && npm run test:render && npm run test:generic",
    "test:main": "electron-mocha --recursive dist/test/main/",
    "test:generic": "electron-mocha --recursive dist/test/generic/",
    "test:render": "electron-mocha --recursive --renderer dist/test/render/ --require-main dist/test/support/experimental-features.js",
    "test:debug-render": "electron-mocha -u tdd --debug --interactive --recursive --renderer dist/test/render/ --require-main dist/test/support/experimental-features.js",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:fix": "npm run lint:src-fix && npm run lint:test-fix",
    "lint:src": "tslint \"src/**/*.ts?(x)\" --project ./tslint.json",
    "lint:src-fix": "tslint \"src/**/*.ts?(x)\" --fix --project ./tslint.json",
    "lint:test": "tslint \"test/**/*.ts?(x)\" --project ./tslint.json",
    "lint:test-fix": "tslint \"test/**/*.ts?(x)\" --fix --project ./tslint.json",
    "package:linux:x64": "npm prune && npm install && npm run rebuild  && electron-packager . ease --platform=linux --arch=x64",
    "package:windows:x64": "npm prune && npm install && npm run rebuild  && electron-packager . ease --platform=win32 --arch=x64"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Right2Drive/ease"
  },
  "pre-commit": [
    "lint",
    "rebuild"
  ],
  "keywords": [
    "electron",
    "video",
    "sync",
    "typescript",
    "videojs"
  ],
  "author": "Brad Pfannmuller",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/electron": "^1.4.33",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.8",
    "@types/react": "^15.0.7",
    "@types/react-dom": "^0.14.23",
    "@types/react-redux": "^4.4.37",
    "@types/redux-logger": "^2.6.34",
    "@types/simple-peer": "^6.1.0",
    "@types/socket.io-client": "^1.4.29",
    "awesome-typescript-loader": "^3.0.3",
    "chai": "^3.5.0",
    "concurrently": "^3.3.0",
    "css-loader": "^0.26.2",
    "electron": "^1.4.15",
    "electron-mocha": "^3.3.0",
    "electron-packager": "^8.5.2",
    "electron-react-devtools": "^0.4.0",
    "enzyme": "^2.7.1",
    "file-loader": "^0.10.1",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.5.4",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.13.2",
    "tslint": "^4.5.1",
    "tslint-react": "^2.3.0",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "guid": "0.0.12",
    "material-components-web": "^0.6.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-mdl": "^1.9.0",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "simple-peer": "^6.4.3",
    "socket.io-client": "^1.7.2"
  }
}
